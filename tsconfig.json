{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "assets/**/*.ts"
  ]
}
